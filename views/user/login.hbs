
{{#block 'css'}}
  <link rel="stylesheet" href="/css/login.css" type="text/css" />
{{/block}}

{{#extends 'base-landing'}}
    {{#block 'content'}}
    <div style="background-color:#c4a9a6;position:relative;">
        <img src="/landing.jpeg" style="position:absolute;object-fit:cover;width:100vw;height:90vh;"/>
        <form method="POST" class="loginForm">
            {{{form}}}
            <div>
                <input type="hidden" value="{{csrfToken}}" name="_csrf"/>
                <input type="submit" value="Login" class="btn btn-success" style="margin-top:10px;margin-right:15px;"/>
            </div>
        </form>
        
    </div>

    {{/block}}
{{/extends}}


{{#block 'js'}}
<script>
    let allFormDiv = document.querySelectorAll('.form-group');
    for (let each of allFormDiv) {
        each.style = "margin-bottom:10px;"
    }

    let allLabel = document.querySelectorAll('.form-group label');
    for (let each of allLabel) {
        console.log(each)
        each.style = "font-size:medium;"
    }
</script>
{{/block}}

