<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

  <title>Hello, world!</title>

  {{#block 'css'}}

  {{/block}}
</head>

<body>
  <div class="container-fluid">

    <!-- A grey horizontal navbar that becomes vertical on small screens -->
    <nav class="navbar navbar-expand-sm bg-light">

      <div class="container-fluid">
        <!-- Links -->
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/tea" style="margin-right:15px;">Tea Products</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/brand" style="margin-left:15px;margin-right:15px;">Dashboard</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/user" style="margin-left:15px;margin-right:15px;">Users</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/customer" style="margin-left:15px;margin-right:15px;">Customers</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/order" style="margin-left:15px;margin-right:15px;">Orders</a>
          </li>
        </ul>

        <div>
          {{#if user}}
          <span style="margin-right:10px;">{{user.username}}</span>
          <a href="/cart" class="btn btn-success btn-sm mx-3">Cart ({{cartCount}})</a>
          {{!-- <a href="/cart" class="btn btn-primary btn-sm">Cart ({{cartCount}})</a> --}}
          <a href="/user/logout" class="btn btn-danger btn-sm">Logout</a>
          {{else}}

          <span style="margin-right:10px;">Hi Guest</span>
          <a href="/users/login" class="btn btn-sm btn-success">Login</a>
          {{/if}}
        </div>
      </div>

    </nav>

    {{#if success_messages}}
    {{#each success_messages}}
    <div class="alert alert-success">{{this}}</div>
    {{/each}}
    {{/if}}

    {{#if error_messages}}
    {{#each error_messages}}
    <div class="alert alert-danger">{{this}}</div>
    {{/each}}
    {{/if}}

    <div style="height:30px;"></div>
    {{#block 'content'}}
    {{/block}}


  {{#block 'js'}}

  {{/block}}
</body>

</html>